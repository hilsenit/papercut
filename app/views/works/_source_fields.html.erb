    <%= f.object.id if f.object.id.present? %>
  </div>
  <hr>
  <div class="form-field">
    <%= image_tag f.object.image.thumb.url if f.object.image.thumb.url.present? %><br>
    <%= f.label :image, "TilfÃ¸j billede" %>
    <%= f.file_field :image %>
  </div>
  <div class="form-field">
    <%= f.label :title, "Titel" %>
    <%= f.text_field :title %>
  </div>
  <div class="form-field">
    <%= f.label :description, "Beskrivelse" %><br>
    <%= f.text_area :description, class: "source-desc" %>
