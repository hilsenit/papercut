    <h3 class="overview-header">Alt i tema</h3>
    <% @works.each do |work_overview| %>
      <div class="overview-box">
        <div class="overview-image" style="background-image: url(<%= work_overview.cover_image.thumb.url %>);"></div>
        <h4 class="overview-title"><%= work_overview.title %></h4>
        <h5 class="overview-info"><%= work_overview.type_of_content %></h5>
        <h5 class="overview-info"><%= work_overview.created_at.strftime("%d.%m.%y") %></h5>
      </div>
    <% end %>

