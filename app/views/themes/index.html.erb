<div class="themes-wrapper">
  <section class="themes">
  <% @themes.each_with_index do |theme, i| %>
    <%= link_to show_theme_works_path(theme.id, 0), id: "box#{i}", class: "theme", data: {id: i} do %>
      <%= image_tag theme.cover_image, class: "hovering-image", data: {size: "image", div: i} if theme.cover_image.present? %>
      <%= image_tag "", data: {size: "image", div: i} unless theme.cover_image.present? %><!-- without an image -->
      <h2 class="text-center"><%= theme.title %></h2>
      <%= content_tag :h4, "Af " + theme.made_by, class: "made-by" if theme.made_by.present? %>
      <p class="theme-description">
        <%= theme.description.html_safe %>
      </p>
    <% end %>
  <% end %>
  </section>
</div> 
