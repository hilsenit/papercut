<hr>
&larr; <%= link_to "Tilbage til oversigt", backend_path() %>
<h2>Content for '<%= @theme.title %>'<%= link_to "Opret nyt content", new_theme_work_path(), class: "bg-button right" %></h2>
<ul>
<div class="ba-work-wrapper">
  <hr>
    <ul>
  <% @works.each_with_index do |work, i| %>
    <li class="bq-each-work">
      <div class="small">Nr: <%= i + 1 %> | Kategori: <%= show_category_string_helper work.category %> </div>  
      <h3><%= work.title %></h3>
      <p>Sidst redigeret: <%= time_ago_in_words(work.updated_at) %> ago</p>
      <div>
        <%= link_to "Vis", show_theme_works_path(work.theme.id, work.id), class: "bg-button" %> 
        <%= link_to "Rediger", edit_theme_work_path(work.theme.id, work.id), class: "bg-button" %> 
        <%= link_to "Slet", theme_work_path(work.theme.id, work.id), method: :delete, class: "bg-button delete", data: {confirm: "Er du sikker på, at du vil slette '#{work.title}'. Dette kan IKKE gøres om!"} %>
      </div>
    </li>
    <hr>
  <% end %>
</div>

